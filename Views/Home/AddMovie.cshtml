@{
    ViewBag.Title = "Add a movie!";
}

@model Assignment3.Models.Movie;

<!--Form to add movie info to temp storage-->
<form asp-action="AddMovie" method="post">
    <label asp-for="Category">*Category: </label>
    <input asp-for="Category" />
    <br />

    <label asp-for="Title">*Title: </label>
    <input asp-for="Title" />
    <br />

    <label asp-for="Year">*Year: </label>
    <input asp-for="Year" />
    <br />

    <label asp-for="Director">*Director: </label>
    <input asp-for="Director" />
    <br />

    <label asp-for="Rating">*Rating: </label>
    <select asp-for="Rating">
        <option value="" selected>--</option>
        <option value="G">G</option>
        <option value="PG">PG</option>
        <option value="PG-13">PG-13</option>
        <option value="R">R</option>
    </select>
    <br />

    <!--Optional user inputs-->
    <label asp-for="Edit">Edit: </label>
    <input type="radio" value="Yes" asp-for="Edit" name="yes_no" /> Yes
    <input type="radio" value="No" asp-for="Edit" name="yes_no" /> No
    <br />
    
    <label asp-for="LendTo">Lent-to: </label>
    <input asp-for="LendTo"/>
    <br />

    <label asp-for="Notes">Notes: </label>
    <textarea asp-for="Notes" rows="3" maxlength="25" placeholder="Max of 25 characters."></textarea>

    <div asp-validation-summary="All"></div>

    <button type="submit">Add Movie</button>
</form>
<br />
<button><a asp-controller="Home" asp-action="MovieList">Go to Movie List</a></button>
