@{
    ViewBag.Title = "Check out our movie list!";
}

<style>
    th, td {
        padding: 10px 30px;
    }
</style>

<div>
    <h2>Here are our favorite movies</h2>
    <table>
        <thead>
            <tr>
                <th>Category</th>
                <th>Title</th>
                <th>Year</th>
                <th>Director</th>
                <th>Rating</th>
                <th>Edited</th>
                <th>Lent To</th>
                <th>Notes</th>
            </tr>
        </thead>

        <tbody>
            @foreach (Assignment3.Models.Movie x in Model)
            {
                @if (x.Title == "Independence Day")
                {
                    continue;
                }
                else
                {
                    <tr>
                        <td>@x.Category</td>
                        <td>@x.Title</td>
                        <td>@x.Year</td>
                        <td>@x.Director</td>
                        <td>@x.Rating</td>
                        <td>@x.Edit</td>
                        <td>@x.LendTo</td>
                        <td>@x.Notes</td>
                    </tr>
                    
                }
            }
        </tbody>
    </table>
</div>